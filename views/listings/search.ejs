<% layout("/layouts/boilerplate.ejs") %>

<div class="text-left mt-3">
  <a href="/listings" class="btn btn-secondary btn-back">
    <i class="fa-solid fa-arrow-left"></i> Go Back 
  </a>
</div>

<% if (listings.length === 0) { %>
  <p class="text-center text-muted mt-4">No listings found matching "<%= searchQuery %>"</p>
<% } %>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4">
  <% listings.forEach(listing => { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img 
          src="<%= listing.image.url %>" 
          class="card-img-top" 
          alt="listing_image" 
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text-show">
            <b><%= listing.title %></b> <br>
            &#8377 <%= listing.price.toLocaleString("en-IN") %> / night
          </p>
        </div>
      </div>
    </a>
  <% }) %>
</div>
